TYPE=$1
INPUT=$MK_OTA_INPUT/$TYPE
if [ -z "$OUT_DIR" ];then
	OUTPUT=out/target/OTA/$TYPE
else
	OUTPUT=$OUT_DIR/target/OTA/$TYPE
fi
LOGDIR=$OUTPUT/logs

TARGET=`ls $INPUT`
for i in $INPUT;do
	build/tools/mk_ota_script/ota $INPUT/$i $OUTPUT/$i $LOGDIR

	if [ ! -z "$MK_OTA_EXTRA" ];then
		mkdir -p $MK_OTA_EXTRA/$1/$i
		cp $OUTPUT/$i/* $MK_OTA_EXTRA/$TYPE/$i 2> /dev/null 
	fi
done
